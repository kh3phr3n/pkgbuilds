# Maintainer: Remi Casanova <rc.dev@tuxico.com>

pkgname=ttf-nonfree
pkgver=1.0
pkgrel=1

license=('custom')
pkgdesc="Collection of non-free fonts."

arch=('any')
depends=('fontconfig')

source=("${pkgname}.tar.gz")
sha256sums=("")

package() {
    install -Dm644 ${srcdir}/${pkgname}/*.ttf -t ${pkgdir}/usr/share/fonts/nonfree
}

