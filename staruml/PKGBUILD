# Maintainer: RÃ©mi Casanova <kh3phr3n@nixsys.fr>

pkgname=staruml
pkgver=4.1.6
pkgrel=1

arch=('x86_64')
depends=('libxss' 'nss' 'gtk2')

license=('custom')
url='https://staruml.io/'
pkgdesc='A sophisticated software modeler for agile and concise modeling.'

source=("https://staruml.io/download/releases-v4/StarUML_${pkgver}_amd64.deb")
sha256sums=('09439da51f1113130b78e5fce3af5e804368b4c36e3d4e33f12d481aa036d73d')

package() {
    # Extract package data
    tar xf ${srcdir}/data.tar.xz -C ${pkgdir}

    # Execution binary
    install -dm755 ${pkgdir}/usr/bin
    ln -s /opt/StarUML/staruml ${pkgdir}/usr/bin/staruml

    # Package license
    install -Dm644 ${pkgdir}/opt/StarUML/LICENSES.chromium.html ${pkgdir}/usr/share/licenses/${pkgname}/LICENSES
}

